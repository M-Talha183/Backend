<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 min-h-screen flex flex-col items-center justify-center p-6">

    <!-- Form Section -->
    <div class="w-full max-w-md bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 md:p-8">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4 text-center">Create a New Task</h2>
      <form action="/create" method="post" class="grid gap-4">
        <input
          type="text"
          placeholder="Title goes Here"
          class="w-full rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 px-4 py-3 text-gray-900 dark:text-gray-100 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
            name="title"
          />

        <textarea
          placeholder="Write your Task Details Here"
          class="w-full min-h-[140px] rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 px-4 py-3 text-gray-900 dark:text-gray-100 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition resize-y"
          name="details"
        ></textarea>

        <input
          type="submit"
          value="Create Task"
          class="w-full cursor-pointer rounded-xl bg-indigo-600 px-4 py-3 font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
        />
      </form>
    </div>

    <!-- Task Section -->
    <div class="task mt-10 flex gap-6 flex-wrap justify-center">

    <% if (files.length > 0) {  %>
    <% files.forEach((e)=>{ %>


      <div class="bg-zinc-800 w-72 p-5 rounded-xl shadow-md hover:shadow-lg transition">
        <h1 class="text-white text-xl font-semibold mb-2"><%= e %></h1>
<div class="flex justify-between">
        <a href="/files/<%= e %>" class="text-blue-400 hover:underline  inline-block">Read More</a>
        <a href="/edit/<%= e %>" class="text-blue-400 hover:underline  inline-block">Edit</a>

</div>   
   </div>
        <% }) %>
        <%} else { %> 
          <h3 class="text-gray-500 text-2xl ">No Tasks Available</h3>
            <% } %>
    </div>

  </body>
</html>
