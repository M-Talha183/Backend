<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-100">

    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        
        <!-- Header with Back Button -->
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold">All Users</h1>
            <a href="/" class="bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded-lg text-sm font-medium transition">Back Home</a>
        </div>

        <!-- Users Grid -->
        <div class="users grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% user.forEach(user => { %>
            <div class="user bg-white text-gray-900 rounded-xl shadow-lg p-4 flex flex-col items-center space-y-3 transition hover:scale-105">
                <div class="w-24 h-24">
                    <img src="<%= user.image %>" alt="<%= user.name %>" class="w-full h-full object-cover rounded-full border-2 border-gray-300">
                </div>
                <h3 class="text-lg font-semibold"><%= user.name %></h3>
                <h5 class="text-sm text-gray-600"><%= user.email %></h5>
                
                <!-- Buttons -->
                <div class="flex space-x-3 mt-3">
                    <a href="/edit/<%= user._id %>" class="bg-yellow-400 hover:bg-yellow-500 px-3 py-1 rounded-lg text-xs font-medium text-white transition">Edit</a>
                    <a href="/delete/<%= user._id %>" class="bg-red-500 hover:bg-red-600 px-3 py-1 rounded-lg text-xs font-medium text-white transition">Delete</a>
                </div>
            </div>
            <% }) %>
        </div>

    </div>
    
</body>
</html>
